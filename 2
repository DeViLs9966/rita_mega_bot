import os
import re

SCRIPT_PATH = "check_bot_diagnostics.py"
BACKUP_PATH = "check_bot_diagnostics_backup.py"

def backup_file():
    with open(SCRIPT_PATH, "r", encoding="utf-8") as original:
        content = original.read()
    with open(BACKUP_PATH, "w", encoding="utf-8") as backup:
        backup.write(content)
    print("‚úÖ –†–µ–∑–µ—Ä–≤–Ω–∞—è –∫–æ–ø–∏—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞:", BACKUP_PATH)

def fix_indentation(code_lines):
    fixed_lines = []
    for line in code_lines:
        fixed = line.replace('\t', '    ')  # –∑–∞–º–µ–Ω—è–µ–º —Ç–∞–±—ã –Ω–∞ 4 –ø—Ä–æ–±–µ–ª–∞
        fixed_lines.append(fixed)
    return fixed_lines

def fix_invalid_syntax(lines):
    fixed = []
    skip_next = False
    for line in lines:
        # –£–¥–∞–ª—è–µ–º —Å—Ç—Ä–æ–∫–∏, –≥–¥–µ –µ—Å—Ç—å –æ—à–∏–±–∫–∞ –Ω–µ–∑–∞–≤–µ—Ä—à—ë–Ω–Ω–æ–≥–æ –ø—Ä–∏—Å–≤–∞–∏–≤–∞–Ω–∏—è
        if re.match(r"^\s*\w+\s*=\s*#.*", line):
            continue

        # –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –∑–∞–≤–µ—Ä—à–∞–µ–º try –±–µ–∑ except
        if re.match(r"^\s*try\s*:\s*$", line):
            fixed.append(line)
            fixed.append("    pass  # TODO: try block\n    except Exception as e:\n        print('üõ† –ò—Å–∫–ª—é—á–µ–Ω–∏–µ:', e)")
            skip_next = True
            continue

        # –ò–≥–Ω–æ—Ä–∏—Ä—É–µ–º –±–ª–æ–∫–∏ –ø–æ—Å–ª–µ –∞–≤—Ç–æ–¥–æ–ø–æ–ª–Ω–µ–Ω–∏—è
        if skip_next:
            skip_next = False
            continue

        fixed.append(line)
    return fixed

def fix_missing_imports(lines):
    if any("ContextTypes" in line for line in lines) and not any("from telegram.ext import ContextTypes" in line for line in lines):
        lines.insert(0, "from telegram.ext import ContextTypes")
    return lines

def fix_script():
    with open(SCRIPT_PATH, "r", encoding="utf-8") as f:
        lines = f.readlines()

    lines = fix_indentation(lines)
    lines = fix_invalid_syntax(lines)
    lines = fix_missing_imports(lines)

    with open(SCRIPT_PATH, "w", encoding="utf-8") as f:
        f.write("".join(lines))
    print("‚úÖ –û—à–∏–±–∫–∏ –≤ —Å–∫—Ä–∏–ø—Ç–µ –∏—Å–ø—Ä–∞–≤–ª–µ–Ω—ã:", SCRIPT_PATH)

if __name__ == "__main__":
    if not os.path.exists(SCRIPT_PATH):
        print("‚ùå –§–∞–π–ª –Ω–µ –Ω–∞–π–¥–µ–Ω:", SCRIPT_PATH)
    else:
        backup_file()
        fix_script()
