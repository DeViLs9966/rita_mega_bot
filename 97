# check_admin_calls.py

import re

files = ["check_bot_diagnostics.py", "rita_main.py"]

pattern = re.compile(r'send_admin_message\s*î€([^)]*)î€')

for filename in files:
    print(f"\nğŸ“„ ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ñ„Ğ°Ğ¹Ğ»Ğ°: {filename}")
    try:
        with open(filename, 'r', encoding='utf-8') as f:
            lines = f.readlines()
        for i, line in enumerate(lines, 1):
            if 'send_admin_message' in line:
                match = pattern.search(line)
                if match:
                    args = match.group(1)
                    arg_count = len([a for a in args.split(',') if a.strip()])
                    if arg_count < 2:
                        print(f"âš ï¸  Ğ¡Ñ‚Ñ€Ğ¾ĞºĞ° {i}: Ğ½ĞµĞ´Ğ¾ÑÑ‚Ğ°Ñ‚Ğ¾Ñ‡Ğ½Ğ¾ Ğ°Ñ€Ğ³ÑƒĞ¼ĞµĞ½Ñ‚Ğ¾Ğ² ({arg_count})")
                        print(f"    â†’ {line.strip()}")
    except FileNotFoundError:
        print(f"âŒ Ğ¤Ğ°Ğ¹Ğ» Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½: {filename}")
